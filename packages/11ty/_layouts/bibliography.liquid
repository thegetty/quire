---
layout: page
---

{% assign entries = references.entries | sortReferences %}

{{ content }}

<div class="quire-page__content__references">
  {% if config.params.displayBiblioShort == true %}
    {% for entry in entries %}
      <dl>
        <dt>{{ entry.id | markdownify }}</dt>
        <dd>{{ entry.full | markdownify }}</dd>
      </dl>
    {% endfor %}
  {% else %}
    <ul>
      {% for entry in entries%}
        <li>{{ entry.full | markdownify }}</li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
