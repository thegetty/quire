---
layout: base.11ty.js
description: Single page default template
---

<article class="{% render 'page/class', class: class, weight: weight %} quire-page" id="main" role="main">
  {% render 'page/header', data: data %}
  {% if content %}
  <section class="section quire-page__content" id="content">
    <div class="container">
      <div class="content">
        {{ content }}
        {% render 'page/bibliography' %}
      </div>
    </div>
  </section>
  {% endif %}
  <section class="section quire-page__content">
    <div class="container">
      {% pageButtons pagination: pagination %}
    </div>
  </section>
</article>
