{% comment %}
  Half-title page and title page page layout for PDF output only
{% endcomment %}
<div class="fullPageBreak"/>
<div class="half-title-page">
  {% if publication.title %}
    <span class="title-htp">{{ publication.title | markdownify }}</span>
  {% endif %}
</div>
<div class="fullPageBreak"/>
<div class="title-page">
  {% if publication.title %}
    <span class="title-tp">{{ publication.title | markdownify }}</span>
    <br />
  {% endif %}
  {% if publication.subtitle %}
    <span class="sub-title">{{ publication.subtitle | markdownify }}</span>
    <br />
  {% endif %}
  <span class="contributor">
    {% if publication.contributor_as_it_appears %}
      {{ publication.contributor_as_it_appears | markdownify }}
    {% else %}
      {% render '_includes/contributor-list', contributorType: 'primary', listType: 'string' %}
    {% endif %}
  </span>
  <br />
  <span class="publisher">
    {{ publication.publisher.name | publication.publisher.location | join: ', ' }}
  </span>
</div>
