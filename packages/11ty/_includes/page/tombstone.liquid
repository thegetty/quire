{% comment %}
 Entry tombstone data
{% endcomment %}

<section class="quire-entry__tombstone">
  <div class="container">
    <table class="table is-fullwidth">
      <tbody>
      {% tablerow key in object_display_order %}
        {% if object[key] %}
        <td>{{ key | capitalize }}</td>
        <td>{{ object[key] | markdownify }}</td>
        {% endif %}
      {% endtablerow %}
      </tbody>
    </table>
    {% if object.link %}
      <a class="button" href="{{ object.link }}" target="_blank">{{ config.params.entryPageObjectLinkText }} {% icon type='link', description='' %}</a>
    {% endif %}
  </div>
</section>