{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Objects Schema",
  "type": "object",
  "required": [
    "object_card",
    "object_display_order",
    "object_filters",
    "object_list"
  ],
  "properties": {
    "object_filters": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0
    },
    "object_card": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0
    },
    "object_display_order": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 0
    },
    "object_list": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "artist": { "type": "string" },
          "year": { "type": "string" },
          "medium": { "type": "string" },
          "dimensions": { "type": "string" },
          "location": { "type": "string" },
          "link": { "type": "string", "format": "uri" },
          "figure": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" }
              },
              "required": [
                "id"
              ]
            },
            "minItems": 0
          }
        },
        "required": [
          "id",
          "title"
        ]
      },
      "minItems": 0
    }
  }
}