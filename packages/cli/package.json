{
  "name": "@thegetty/quire-cli",
  "description": "Quire command-line interface",
  "version": "1.0.0-rc.37",
  "author": "Getty Digital",
  "license": "SEE LICENSE IN https://github.com/thegetty/quire/blob/main/LICENSE",
  "bugs": {
    "url": "https://github.com/thegetty/quire/issues"
  },
  "homepage": "https://github.com/thegetty/quire/tree/main/packages/cli#readme",
  "keywords": [
    "cli",
    "quire"
  ],
  "bin": {
    "quire": "./bin/cli.js"
  },
  "exports": "./bin/cli.js",
  "type": "module",
  "files": [
    "bin/",
    "patches/",
    "schemas/",
    "scripts/",
    "src/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thegetty/quire.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "docs": "jsdoc2md --configure jsdoc.json --files src/**/*.js > docs/cli.md",
    "lint": "eslint src --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:unit": "ava src/commands/**/*.spec.js src/lib/**/*.spec.js",
    "test:integration": "ava src/commands/**/*.test.js src/helpers/**/*.test.js src/lib/**/*.test.js",
    "test:e2e": "ava test/e2e/**/*.e2e.js",
    "test:coverage": "c8 ava"
  },
  "imports": {
    "#root/*": "./*",
    "#src/*.js": "./src/*.js",
    "#helpers/*.js": "./src/helpers/*.js",
    "#lib/*.js": "./src/lib/*.js",
    "#debug": "./src/lib/logger/debug.js"
  },
  "dependencies": {
    "ajv": "^8.16.0",
    "boxen": "^7.0.1",
    "chalk": "^5.2.0",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "cross-env": "^7.0.3",
    "debug": "^4.4.0",
    "del": "^7.0.0",
    "epubjs-cli": "^0.1.6",
    "execa": "^6.1.0",
    "fs-extra": "^11.1.0",
    "hosted-git-info": "^6.1.1",
    "i18next": "^22.4.9",
    "inquirer": "^9.1.4",
    "js-yaml": "^4.1.0",
    "loglevel": "^1.8.1",
    "node-fetch": "^3.3.2",
    "open": "^8.4.0",
    "ora": "^6.1.2",
    "pagedjs-cli": "^0.4.3",
    "pdf-lib": "^1.17.1",
    "read-package-up": "^11.0.0",
    "semver": "^7.3.8",
    "update-notifier": "^7.3.1",
    "which": "^2.0.2",
    "wrap-ansi": "^8.1.0"
  },
  "devDependencies": {
    "ava": "^6.2.0",
    "eslint": "^8.32.0",
    "esmock": "^2.7.3",
    "jsdoc-to-markdown": "^9.1.1",
    "memfs": "^4.51.1",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">=22"
  }
}
