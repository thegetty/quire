{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "description": "a multi-format book publishing framework",
  "author": "Getty Digital",
  "license": "J Paul Getty Trust",
  "scripts": {
    "cli:build": "cd packages/cli && npm install && npm run build",
    "cli:install": "npm run cli:build && npm install -g packages/cli",
    "cli:install-deps": "cd packages/cli && npm install",
    "cli:uninstall": "cd packages/cli && npm uninstall -g",
    "postinstall": "lerna bootstrap --hoist",
    "posttest": "node tests/e2e/fixtures/teardown.js",
    "pretest": "node tests/e2e/fixtures/setup.js",
    "test:cli": "jest tests/e2e/specs/cli",
    "test": "npm run test:cli && npm run test:cypress",
    "test:cypress": "cd tests/e2e/fixtures/project && quire preview & ./node_modules/.bin/wait-on http://localhost:1313 & ./node_modules/.bin/cypress run --spec **/*.spec.js",
    "test:unit": "cd packages/cli && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thegetty/quire.git"
  },
  "bugs": {
    "url": "https://github.com/thegetty/quire/issues"
  },
  "homepage": "https://quire.getty.edu/",
  "devDependencies": {
    "cypress": "^3.8.0",
    "lerna": "^4.0.0",
    "wait-on": "^3.3.0"
  },
  "dependencies": {}
}
